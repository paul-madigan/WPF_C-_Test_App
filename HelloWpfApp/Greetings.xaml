<Window x:Class="HelloWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="230,107,0,0" TextWrapping="Wrap" Text="Select a message option and then choose the Display button" VerticalAlignment="Top"/>
        <RadioButton x:Name="HelloButton" Content="Hello" IsChecked="True"  HorizontalAlignment="Left" Margin="187,177,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="GoodbyButton" Content="GoodBye" HorizontalAlignment="Left" Margin="466,177,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.365,-1.537"/>
        <Button Content="Display" HorizontalAlignment="Left" Margin="346,258,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Window>
